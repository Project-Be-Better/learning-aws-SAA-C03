{
  "name": "aws-saa-c03-dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "amazonwebservices.aws-toolkit-vscode",
        "hashicorp.terraform",
        "ms-python.python",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [3000, 8080],
  // "mounts": [
  //   // "source=${localWorkspaceFolder}/.env,target=/workspaces/learning-SAA-C03/.env,type=bind,consistency=cached"

  // ],
  // "mounts": ["source=${env:HOME}/.aws,target=/root/.aws,type=bind"],
  "mounts": ["source=${env:USERPROFILE}\\.aws,target=/root/.aws,type=bind"],

  // "postCreateCommand": "aws --version && terraform version && cdk --version"
  "postCreateCommand": "bash .devcontainer/bootstrap.sh && aws --version && terraform version && cdk --version"
}
